{
  "name": "messenger",
  "version": "1.0.0",
  "description": "Messenger",
  "scripts": {
    "prepare": "husky install",
    "dev": "webpack-dev-server --no-cache --open",
    "build": "node ./node_modules/.bin/webpack",
    "build:container": "docker build -t chat-app .",
    "start": "npm run build && node ./server.js ",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "tsc:check": "tsc -b tsconfig.json",
    "lint": "eslint --ext .ts src/",
    "stylelint": "stylelint \"src/**/*.{pcss,.pcss}\"",
    "fix-lint": "eslint --ext .ts  src --fix",
    "fix-stylelint": "stylelint \"src/**/*.{pcss,.pcss}\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run tsc:check"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/jsdom": "21.1.1",
    "@types/mocha": "10.0.0",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "autoprefixer": "10.4.13",
    "chai": "4.3.6",
    "css-loader": "6.7.3",
    "css-minimizer-webpack-plugin": "5.0.0",
    "eslint": "8.34.0",
    "eslint-config-airbnb": "19.0.4",
    "express": "4.18.2",
    "express-history-api-fallback": "2.2.1",
    "handlebars": "4.7.7",
    "handlebars-loader": "1.7.3",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "jsdom": "21.1.1",
    "mini-css-extract-plugin": "2.7.5",
    "mocha": "10.0.0",
    "postcss": "8.4.21",
    "postcss-import": "15.1.0",
    "postcss-loader": "7.1.0",
    "postcss-nested": "6.0.0",
    "postcss-preset-env": "8.0.1",
    "postcss-simple-vars": "7.0.1",
    "prettier": "2.8.4",
    "proxyquire": "2.1.3",
    "sinon": "14.0.1",
    "stylelint": "15.1.0",
    "stylelint-config-standard": "30.0.1",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "webpack": "5.77.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.13.1"
  },
  "dependencies": {
    "uuid": "9.0.0"
  }
}
