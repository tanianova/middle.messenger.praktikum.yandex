<section class="chat">
  {{{sidebar}}}
  <div class="chat-content">
    {{#if selectedChat}}
      {{{chatHeader}}}
    {{/if}}
    <div class="chat-content__main">
      <p class="chat-content__main-date">{{messageDate}}</p>
      {{#each chatMessageList}}
        {{{this}}}
      {{/each}}
    </div>
    <div class='chat-content__footer'>
      <form class='message__form' action=''>
        <label class="attachment__label" for="attachment">
          <input class="attachment__input" type="file" id="attachment" name="attachment" />
        </label>
        {{{inputMessage}}}
        {{{buttonArrow}}}
      </form>
    </div>
  </div>
</section>
